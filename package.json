{
  "name": "kstat-kss-builder",
  "version": "0.5.1",
  "description": "A KSS3 Twig builder made for, but not limited to, use with Kalastatic 2.0",
  "main": "builder.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "grunt watch",
    "sass": "./node_modules/.bin/node-sass --output-style compressed styles/kss.scss kss-assets/kss.css",
    "postinstall": "mkdir -p kss-assets/vendor && cp -R ./node_modules/vex-js/ kss-assets/vendor/vex"
  },
  "devDependencies": {
    "grunt": "^1.0.1",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-exec": "^1.0.1",
    "node-sass": "^3.4.2"
  },
  "dependencies": {
    "vex-js": "^3.0.0"
  }
}
